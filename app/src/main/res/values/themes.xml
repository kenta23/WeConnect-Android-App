<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeConnect" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <!--Tertiary -->
        <item name="colorTertiary">@color/tertiary</item>
        <!--Dark color -->
        <item name="colorPrimaryDark">@color/dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.WeConnect.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.WeConnect.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WeConnect.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="background">
        <item name="android:background">@drawable/background_light</item>
    </style>

    <!--text color -->
    <style name="textcolor">
        <item name="android:textColor">#000</item>
    </style>

    <!--CHAT activity -->
    <style name="backgroundChat">
        <item  name="android:background">@color/white</item>
    </style>

    <style name="backgroundProfile">
        <item name="android:background">
            @color/white
        </item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textColorHint">@color/dark</item>
    </style>


    <style name="backgroundSettings">
        <item name="android:background">
            @color/white
        </item>
        <item name="android:textColor">@color/black</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="backgroundLinearLayoutSettings">
        <item name="android:background">@drawable/round_back_secondary_100</item>
    </style>

</resources>