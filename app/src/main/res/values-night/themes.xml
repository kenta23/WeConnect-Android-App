<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeConnect" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <!--Tertiary -->
        <item name="colorTertiary">@color/tertiary</item>
        <!--Dark color -->
        <item name="colorPrimaryDark">@color/dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#24252a</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
    </style>

    <!--background color -->
    <style name="background">
        <item name="android:background">@color/dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <!--text color -->
    <style name="textcolor">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--CHAT activity -->
    <style name="backgroundChat">
        <item  name="android:background">@color/dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

<!--styles in Profile activity -->
    <style name="backgroundProfile">
        <item name="android:background">
            @color/dark
        </item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <!--styles in Settings activity -->
    <style name="backgroundSettings">
        <item name="android:background">
            @color/dark
        </item>
        <item name="android:textColor">@color/white</item>
        <item  name="android:tint">@color/white</item>
    </style>

    <style name="backgroundLinearLayoutSettings">
        <item name="android:background">@drawable/round_back_secondary_dark</item>
    </style>

    <style name="backgroundCountryCodePicker" >
        app:ccp_contentColor="@color/white"
        app:ccpDialog_backgroundColor="@color/white"
        app:ccpDialog_textColor="@color/white"
        app:ccp_arrowColor="@color/white"
    </style>

    <style name="backgroundchatmain">
        <item  name="android:background">@color/dark</item>
    </style>
</resources>